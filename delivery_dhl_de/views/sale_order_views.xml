<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.bt_dhl_paket_shipping_ept</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <header position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('has_errors_address_dhl', '=', False)]}"
                >
                    The delivery address could not be validated by DHL:
                    <span style="font-style: italic;">
                        <field name="feedback_validation_address_dhl" nolabel="1" />
                    </span>
                </div>
                <field name="has_errors_address_dhl" invisible="1" />
            </header>
            <group name="utm_link" position="after">
                <group string="DHL Validation">
                    <field name="has_errors_address_dhl" />
                    <field
                        name="feedback_validation_address_dhl"
                        attrs="{'invisible': [('has_errors_address_dhl', '=', False)]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
